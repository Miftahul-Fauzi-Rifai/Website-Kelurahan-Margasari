# Environment Variables Template
# Copy this file to .env and fill in your values

# ========================================
# CHATBOT GEMINI AI - Environment Variables
# ========================================

# Gemini API Configuration
GEMINI_API_KEY=your_api_key_here
GEMINI_MODEL=gemini-2.0-flash

# Server Configuration
PORT=3000
NODE_ENV=production

# CORS Allowed Origins (comma-separated)
# IMPORTANT: Update this with your production domain!
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,http://localhost:8000

# Timeout Settings (in milliseconds)
API_TIMEOUT=30000

# Data Storage
TRAIN_DATA_FILE=./data/train.json
UPLOAD_DIR=./uploads
